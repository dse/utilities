#!/usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset

declare -a cygwin_pkgs
declare -a debian_pkgs
declare -a cpan_pkgs

cygwin_pkgs=()
debian_pkgs=()
cpan_pkgs=()

add-perl-module () {
    local cygwin=''
    local debian=''
    while getopts 'C:D:' OPTION ; do
        case "$OPTION" in
            C) cygwin="$OPTARG";;
            D) debian="$OPTARG";;
        esac
    done
    shift $((OPTIND - 1))
    echo "$@"
    if perl -M"$1" -e exit ; then
        >&2 echo "$1 is already installed."
        return 0
    else
        if [[ "$OSTYPE" = "cygwin" ]] ; then
            if [[ "$cygwin" != "" ]] ; then
                cygwin_pkgs+=("$cygwin")
            else
                cpan_pkgs+=("$1")
            fi
        else
            cpan_pkgs+=("$1")
        fi
    fi
}

install-all-perl-modules () {
    if (( "${#cygwin_pkgs[@]}" )) ; then
        apt-cyg install "${cygwin_pkgs[@]}"
    fi
    if (( "${#cpan_pkgs[@]}" )) ; then
        cpan "${cpan_pkgs[@]}"
    fi
}

add-perl-module -C perl-DBI            DBI
