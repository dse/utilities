#!/usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset
shopt -s lastpipe

# .name
#     shelp - a shitty help system for shell scripts
# .synopsis
#     shelp <program-name>
# .description
#     The `shelp` utility

main () {
    if (( $# < 1 )) ; then
        >&2 echo "shelp: not enough arguments"
        exit 1
    fi

    if (( $# > 1 )) ; then
        >&2 echo "shelp: too many arguments"
        exit 1
    fi

    declare -a paths
    declare exe

    { type -a -p "$1" || true; } | readarray -t paths

    temp="$(mktemp)"

    if (( ! "${#paths[@]}" )) ; then
        >&2 echo "shelp: $1: command not found"
        exit 1
    fi

    TAB=$'\t'

    if [[ -v SHELP_PAGER ]] ; then
        pager="${SHELP_PAGER}"
    elif [[ -v PAGER ]] ; then
        pager="${PAGER}"
    fi

    for exe in "${paths}" ; do
        cat "${exe}" | expand | sed -E -n '
            /^ *# *\. */,/^ *[^#]/{
                /^ *[^#]/d;
                /^ *# *\. */{
                    s///g;p;d;
                };
                /^ *# */{
                    s//    /g;p;d;
                }
            }' >"${temp}"
        if grep . "${temp}" >/dev/null 2>/dev/null ; then
            if [[ -v pager ]] ; then
                cat "${temp}" | $pager
            else
                cat "${temp}"
            fi
            return 0
        fi
    done
    >&2 echo "shelp: $1: no help found; try man, perldoc, etc."
    return 1
}

AT_EXIT () {
    [[ -v temp ]]  && [[ -e "${temp}" ]]  && rm "${temp}"  || true
}

###############################################################################
trap AT_EXIT EXIT
main "$@"
