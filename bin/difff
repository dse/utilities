#!/usr/bin/env bash
set -o errexit
set -o pipefail

dirname="$(dirname "$0")"
progname="$(basename "$0")"

# shellcheck disable=SC1090
. "${dirname}/../share/utilities/findd-grepp.bash"

. "${HOME}/git/dse.d/bash-getlongopts/getlongopts.sh"

grepp_exclude_binary_files=1    # default for difff

declare -i dry_run=0
declare -i verbose=0

main () {
    local -a diff_options

    check_options "$@"
    shift $((OPTIND - 1))

    set_diff_excludes
    local -a cmd
    cmd=(
        diff -r -u -b -w
        "${diff_options[@]}"
        "${diff_excludes[@]}"
        "$@"
    )

    if (( dry_run || verbose )) ; then
        >&2 echo_command "${cmd[@]}"
    fi
    if (( dry_run )) ; then
        exit 0
    fi
    exec "${cmd[@]}"
}

declare -a longopts
longopts=(

    # diff options
    normal
    q,brief
    s,report-identical-files
    c
    C,context:NUM
    u
    U,unified:NUM
    e,ed
    n,rcs
    y,side-by-side
    W,width=NUM
    left-column
    suppress-common-lines
    p,show-c-function
    F,show-function-line=RE
    label=LABEL
    t,expand-tabs
    T,initial-tab
    tabsize=NUM
    suppress-blank-empty
    l,paginate
    r,recursive
    no-dereference
    N,new-file
    unidirectional-new-file
    ignore-file-name-case
    no-ignore-file-name-case
    x,exclude=PAT
    X,exclude-from=FILE
    S,starting-file=FILE
    from-file=FILE1
    to-file=FILE2
    i,ignore-case
    E,ignore-tab-expansion
    Z,ignore-trailing-space
    b,ignore-space-change
    w,ignore-all-space
    B,ignore-blank-lines
    I,ignore-matching-lines=RE
    a,text
    strip-trailing-cr
    D,ifdef=NAME

    # --GTYPE-group-format
    old-group-format=GFMT
    new-group-format=GFMT
    unchanged-group-format=GFMT
    changed-group-format=GFMT

    line-format=LFMT

    # --LTYPE-line-format
    old-line-format=LFMT
    new-line-format=LFMT
    unchanged-line-format=LFMT

    d,minimal
    horizon-lines=NUM
    speed-large-files
    color:WHEN
    palette=PALETTE
    help
    v,version

    no-exclude=PAT
    dry-run
    verbose
)

check_options () {
    while getlongopts '' OPTION --type-2 "${longopts[@]}" -- "$@" ; do
        case "${OPTION}" in
            "?")
                exit 1
                ;;
            'dry-run')
                dry_run=1
                ;;
            'verbose')
                verbose+=1
                ;;
            'no-exclude')
                remove_from_excludes "${OPTARG}"
                ;;
            ?*)
                diff_options+=(
                    "${LONGOPTARGS[@]}"
                )
                ;;
            *)
                >&2 echo "grepp: UNEXPECTED short option: -$OPTION"
                exit 1
                ;;
        esac
    done
}

usage () { cat <<"EOF"; }
usage:
  ${progname} [<option> ...] <files>
EOF

###############################################################################
main "$@"
