#!/usr/bin/env perl
use warnings;
use strict;
use open qw(locale);
use v5.10.0;
use utf8;

#------------------------------------------------------------------------------
use File::Basename qw(basename);
our $PROGNAME = basename($0);

#------------------------------------------------------------------------------
use YAML qw();
use JSON;

my $json = JSON->new()->pretty();

#------------------------------------------------------------------------------
local $/ = undef;
while (<>) {
    local $YAML::Preserve = 1;
    my $doc = YAML::Load($_);
    print $json->encode($doc);
}
