#!/usr/bin/env fontforge
# -*- mode: python; coding: utf-8 -*-

import fontforge
import os
import argparse

parser = argparse.ArgumentParser(
    description = "Convert from one font format to another. (bitmap-to-bitmap or vector-to-vector)"
)

parser.add_argument('source_filename')
parser.add_argument('dest_filename')

args = parser.parse_args()
print(args)

sourceFilename = args.source_filename
destFilename = args.dest_filename

font = fontforge.open(sourceFilename)
font.generate(destFilename)
