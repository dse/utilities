#!/usr/bin/env bash

coproc TIDYSTDERR {
    if [[ -r "${HOME}/.tidyy-excludes" ]] ; then
        grep ':[0-9]\+:[0-9]\+:' | grep -v -f "${HOME}/.tidyy-excludes"
    else
        grep ':[0-9]\+:[0-9]\+:' | grep -v \
                                        -e '<nobr> is not approved' \
                                        -e 'trimming empty' \
                                        -e '<img> lacks "alt" attribute'
    fi
} >&2

exec tidy "$@" 2>&"${TIDYSTDERR[1]}"
