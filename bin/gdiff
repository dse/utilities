#!/usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset
shopt -s lastpipe

declare -a exclude=(
    # directories
    --exclude=".git"
    --exclude="node_modules"
    --exclude="_cacache"
    --exclude=".node-gyp"
    --exclude="vendor"
    --exclude=".cache"

    # temp/backup files
    --exclude="*~"
    --exclude="#*#"
    --exclude="*.tmp"
    --exclude="*.bak"
    --exclude="*.orig"
    --exclude="*.old"
    --exclude="*.tmp.*"
    --exclude="*.bak.*"
    --exclude="*.orig.*"
    --exclude="*.old.*"

    # bloat
    --exclude="*.min"
    --exclude="*.min.*"
    --exclude="package-lock.json"
    --exclude="composer.lock"
    --exclude="yarn.lock"
    # --exclude="*.map"
    # --exclude="*.map.*"
    # --exclude="*.bundle"
    # --exclude="*.bundle.*"
)

declare -a rsync_options=(
    -avC --delete-excluded
)

declare -a git_diff_options=(
    --no-prefix
    --ignore-blank-lines
    --word-diff
    # --diff-filter=MT
)

if (( $# < 2 )) ; then
    echo "gdiff: not enough arguments" >&2
    exit 1
fi

if [[ "$1" = -* ]] ; then
    echo "gdiff: git-diff options must come AFTER the both paths" >&2
    exit 1
fi

path1="$(realpath "$1")"
path2="$(realpath "$2")"
shift 2

tmpdir="/tmp/.gdiff-$(whoami)"

tmp1="${tmpdir}/$(echo -n "${path1}"|sha1sum|awk '{print $1}')"
tmp2="${tmpdir}/$(echo -n "${path2}"|sha1sum|awk '{print $1}')"

mkdir -p "${tmp1}"
mkdir -p "${tmp2}"
rsync "${rsync_options[@]}" "${exclude[@]}" "${path1}/" "${tmp1}"
rsync "${rsync_options[@]}" "${exclude[@]}" "${path2}/" "${tmp2}"

declare -a cmd=(
    git diff --no-index
    "${git_diff_options[@]}" "$@" "${tmp1}" "${tmp2}"
)

echo "+ ${cmd[@]@Q}"

"${cmd[@]}"
